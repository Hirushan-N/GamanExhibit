{
    "endpoints": [
      {
        "method": "POST",
        "path": "/users",
        "summary": "Register a new user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": [
                  { "name": "username", "type": "string", "description": "The user's username", "example": "johndoe" },
                  { "name": "password", "type": "string", "description": "The user's password", "example": "StrongPassword123!" },
                  { "name": "email", "type": "string", "description": "The user's email address", "example": "johndoe@example.com" }
                ]
              }
            }
          }
        },
        "responses": [
          { "status": 201, "description": "User registered successfully" },
          { "status": 400, "description": "Bad request" }
        ]
      }
    ]
  }  